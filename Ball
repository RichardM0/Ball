
/**
 * Write a description of class Ball here.
 * 
 * @author (your name) 
 * @version (a version number or a date)
 */
import java.awt.Color;
public class Ball
{
    // instance variables
    private double x, y, dx, dy;
    private int radius;
    private Color color;
    private long startTime;

    /**
     * Constructor for objects of class Ball
     */
    public Ball(int x, int y, int radius, long startTime){
        // log position, radius, color, and what time in the frame an instance of ball was created
        this.x = x;
        this.y = y;
        dx = 3.0;
        dy = 0;
        color = Color.red;
        startTime = System.currentTimeMillis();
        this.startTime = startTime;
        this.radius = radius;
    }
    // setter method for X location
    public void setX(double a){
        x = a;
    }
    // setter method for Y location
    public void setY(double a){
        y = a;
    }
    // getter method for X location
    public double getX(){
        return x;
    }
    // getter method for Y location
    public double getY(){
        return y;
    }
    // getter method for Dx
    public double getDx(){
        return dx;
    }
    public double getDy(){
        return dy;
    }
    public long getTime(){
        return System.currentTimeMillis() - startTime;
    }
    public void setDx(double a){
        dx = a;
    }
    public void setDy(double a){
        dy = a;
    }
    public Color getColor(){
        return color;
    }
    public void setColor(Color c){
        color = c;
    }
    public int getRadius(){
        return radius;
    }
}
